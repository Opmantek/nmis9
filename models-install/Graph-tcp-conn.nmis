# Graph tcp-conns: tcpActiveOpens, tcpPassiveOpens, tcpAttemptFails, tcpEstabResets and tcpCurrEstab

%hash = (
	'title' => {
		'standard' => '$node - $length from $datestamp_start to $datestamp_end',
		'short' => '$node - $length'
	},
	'vlabel' => {
		'standard' => 'TCP Connection Statistics',
		'short' => 'TCP Connection Stats'
	},
	'option' => {
		'standard' => [
			'DEF:tcpActiveOpens=$database:tcpActiveOpens:AVERAGE',
			'DEF:tcpPassiveOpens=$database:tcpPassiveOpens:AVERAGE',
			'DEF:tcpAttemptFails=$database:tcpAttemptFails:AVERAGE',
			'DEF:tcpEstabResets=$database:tcpEstabResets:AVERAGE',
			'DEF:tcpCurrEstab=$database:tcpCurrEstab:AVERAGE',

			'LINE1:tcpActiveOpens#00ff00:Active Opens',
			'LINE1:tcpPassiveOpens#0000ff:Passive Opens',
			'LINE1:tcpAttemptFails#ff0000:Attempt Fails',
			'LINE1:tcpEstabResets#ffff00:Established Resets',
			'LINE1:tcpCurrEstab#000000:Current Established',

			#'AREA:ipInReceives#cccccc:IP Packets Received',
			#'STACK:ipInDelivers#000000:IP Packets Local',

			'GPRINT:tcpActiveOpens:AVERAGE:Avg Active Opens %1.2lf',
			'GPRINT:tcpPassiveOpens:AVERAGE:Avg Passive Opens %1.2lf',
			'GPRINT:tcpAttemptFails:AVERAGE:Avg Attempt Fails %1.2lf',
			'GPRINT:tcpEstabResets:AVERAGE:Avg Established Resets %1.2lf\\n',

			'GPRINT:tcpActiveOpens:MAX:Max Active Opens %1.2lf',
			'GPRINT:tcpPassiveOpens:MAX:Max Passive Opens %1.2lf',
			'GPRINT:tcpAttemptFails:MAX:Max Attempt Fails %1.2lf',
			'GPRINT:tcpEstabResets:MAX:Max Established Resets %1.2lf',

			'GPRINT:tcpCurrEstab:AVERAGE:Avg Current Established %1.2lf',
		],
		'small' => [
			'DEF:tcpActiveOpens=$database:tcpActiveOpens:AVERAGE',
			'DEF:tcpPassiveOpens=$database:tcpPassiveOpens:AVERAGE',
			'DEF:tcpAttemptFails=$database:tcpAttemptFails:AVERAGE',
			'DEF:tcpEstabResets=$database:tcpEstabResets:AVERAGE',
			'DEF:tcpCurrEstab=$database:tcpCurrEstab:AVERAGE',
			'LINE1:tcpActiveOpens#00ff00:Active Opens',
			'LINE1:tcpPassiveOpens#0000ff:Passive Opens',
			'LINE1:tcpAttemptFails#ff0000:Attempt Fails',
			'LINE1:tcpEstabResets#ffff00:Established Resets',
			'LINE1:tcpCurrEstab#000000:Current Established',
		]
	}
);
