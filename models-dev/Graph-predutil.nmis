%hash = (
	'title' => {
		'standard' => '$node - $ifDescr - $length from $datestamp_start to $datestamp_end',
		'short' => '$node - $ifDescr - $length'
	},
	'vlabel'=> {
		'standard' => '% Avg Util'
	},
	'option' => {
		'standard' => [
			#'--right-axis-label "latency(ms)",
			#'--right-axis 1:0',
			'DEF:input=$database:ifInOctets:AVERAGE',
			'DEF:output=$database:ifOutOctets:AVERAGE',

			'DEF:inPred=$database:ifInOctets:HWPREDICT',
			'DEF:outPred=$database:ifOutOctets:HWPREDICT',

			'CDEF:inputUtil=input,8,*,$ifSpeed,/,100,*',
			'CDEF:inputSplitUtil=input,8,*,$ifSpeed,/,100,*,$split,*',
			'CDEF:outputUtil=output,8,*,$ifSpeed,/,100,*',

			#'CDEF:smInUtil=inputSplitUtil,1800,TREND',
			#'CDEF:smOutUtil=outputUtil,1800,TREND',
			
			#'VDEF:slInUtil=inputSplitUtil,LSLSLOPE',
			#'VDEF:slOutUtil=outputUtil,LSLSLOPE',

			#'CDEF:predictIn=86400,-7,1800,inputSplitUtil,PREDICT',
			#'CDEF:sigmaIn=86400,-7,1800,inputSplitUtil,PREDICTSIGMA',
			#'CDEF:upperIn=predictIn,sigmaIn,3,*,-',
			#'CDEF:lowerIn=predictIn,sigmaIn,3,*,+',

			#'CDEF:predictOut=86400,-7,1800,outputUtil,PREDICT',
			#'CDEF:sigmaOut=86400,-7,1800,outputUtil,PREDICTSIGMA',
			#'CDEF:upperOut=predictOut,sigmaOut,3,*,+',
			#'CDEF:lowerOut=predictOut,sigmaOut,3,*,-',

			#'LINE1:predictIn#aa00ff:in prediction',
			#'LINE1:predictOut#55aa00:out prediction',

			#'LINE1:upperIn#ff00ff:in upper\certainty\limit',
			#'LINE1:lowerIn#ff00ff:in lower\certainty\limit',

			#'LINE1:upperOut#55ff00:out upper\certainty\limit',
			#'LINE1:lowerOut#ffff00:out lower\certainty\limit',

			'$GLINE:inputSplitUtil#0000ff:In',
			#'LINE1:smInUtil#0000aa:TrendIn',
			#'LINE3:slInUtil#aa00aa:SlopeIn',
			'$GLINE:outputUtil#00ff00:Out',
			#'LINE1:smOutUtil#00aa00:TrendOut',
			#'LINE3:slOutUtil#aaaa00:SlopeOut',

			'LINE1:inPred#aa00ff:in prediction',
			'LINE1:outPred#55aa00:out prediction',

			'GPRINT:inPred:AVERAGE:inPred %1.2lf %% \\n',
			'GPRINT:outPred:AVERAGE:outPred %1.2lf %% \\n',

			'GPRINT:inputUtil:AVERAGE:Avg %1.2lf %% \\n',
			'GPRINT:outputUtil:AVERAGE:Avg %1.2lf %% \\n',
			'COMMENT:\tInterface Speed $speed\\n'
		],
		'small' => [
			'DEF:input=$database:ifInOctets:AVERAGE',
			'DEF:output=$database:ifOutOctets:AVERAGE',
			'CDEF:inputUtil=input,8,*,$ifSpeed,/,100,*',
			'CDEF:inputSplitUtil=input,8,*,$ifSpeed,/,100,*,$split,*',
			'CDEF:outputUtil=output,8,*,$ifSpeed,/,100,*',
			'$GLINE:inputSplitUtil#0000ff:In % Util',
			'$GLINE:outputUtil#00ff00:Out % Util',
			'COMMENT:Interface Speed $speed'
		]
	}
);

